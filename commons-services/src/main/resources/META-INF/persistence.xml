<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="1.0">
    <persistence-unit name="cc-directory">
        <class>com.spectral.cc.core.directory.commons.model.technical.network.Datacenter</class>
        <class>com.spectral.cc.core.directory.commons.model.technical.network.Lan</class>
        <class>com.spectral.cc.core.directory.commons.model.technical.network.LanType</class>
        <class>com.spectral.cc.core.directory.commons.model.technical.network.MulticastArea</class>
        <class>com.spectral.cc.core.directory.commons.model.technical.system.OSInstance</class>
        <class>com.spectral.cc.core.directory.commons.model.technical.system.OSType</class>

        <class>com.spectral.cc.core.directory.commons.model.organisational.Application</class>
        <class>com.spectral.cc.core.directory.commons.model.organisational.Company</class>
        <class>com.spectral.cc.core.directory.commons.model.organisational.Environment</class>
        <class>com.spectral.cc.core.directory.commons.model.organisational.Team</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.connection.url" value="jdbc:h2:mem:db1;DB_CLOSE_DELAY=-1;MVCC=TRUE"/>
            <property name="hibernate.connection.username" value="sa"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>

    </persistence-unit>
</persistence>